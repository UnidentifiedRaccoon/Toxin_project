include ../main-navigation/main-navigation
include ../logo/logo

//-
  options.menuItems - массив элементов меню
  options.guestMenuItems - массив элементов меню гоостя

mixin header(options)
  if !options
    - options = {}

  .header
    .header__logo
      +logo()
    .header__menu
      +main-navigation({items: options.menuItems})
    .header__guestMenu
      +main-navigation({items: options.guestMenuItems})