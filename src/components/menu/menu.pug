include ../button/button
//-
  options.items - массив с элементами меню
  options.items[0].name - имя элемента меню
  options.items[0].href - ссылка элемента меню

mixin menu(options)
  if !options
    - options = {}
  if !options.items
    - options.items = []

  .menu
    nav.menu__list
      for item in options.items
        if item.buttonMode
          .menu__item
            +button({
              text: item.name,
              href: item.href,
              fillingStyle: item.fillingStyle,
              widthStyle: item.widthStyle
            })
        else
          a.menu__item(href = item.href)= item.name